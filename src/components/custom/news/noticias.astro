---
import { getNews } from "@utils/appwrite";

const news = await getNews();
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Noticias relacionadas
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Mantente al día con las últimas noticias sobre psicología y nutrición.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {news.documents.length === 0 && <p>No hay noticias relacionadas</p>}

  {
    news.documents.map((item) => (
      <a href={item.url} class="rounded-lg overflow-hidden">
        <div class="flex flex-col gap-4 items-start">
          <img src={item.image} alt="" class="w-full h-full object-cover" />
          <div>
            <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
            <p class="text-slate-500 mt-2 leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      </a>
    ))
  }
</div>
