---
import { Picture } from "astro:assets";
import heroImage from "assets/hero-body.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Person sitting"
      width="500"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Psicología y Nutrición
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Web para aprender en profundidad sobre la psicología y la nutrición. Ve
      videos, lee artículos y desaoga tus sentimientos sobre estos temas.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">

      <Link
        size="lg"
        href="/auth/login"
        style="outline"
        block
        class="flex gap-1 items-center justify-center">

        Inicia sesión
      </Link>
      <Link
        href="/auth/register"
        size="lg"
        class="flex gap-1 items-center justify-center"
        block>

        Registrarse
      </Link>
    </div>
  </div>
</main>
