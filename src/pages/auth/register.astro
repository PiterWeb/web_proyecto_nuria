---
import Authform from "@components/custom/auth/authform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Registrarse</Fragment>
      <Fragment slot="desc">Registra una nueva cuenta</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-1 mx-auto max-w-lg mt-16">
      <div>
        <Authform action="register"/>
      </div>
    </div>
  </Container>
</Layout>